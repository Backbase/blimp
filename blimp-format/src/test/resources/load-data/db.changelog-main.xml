<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.10.xsd">

    <changeSet author="backbase" context="initial_0.0.1" id="initial_0.0.1_001">
        <comment>create the main table</comment>
        <createTable remarks="Table to store data" tableName="main">
            <column name="id" type="VARCHAR(50)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_id"/>
            </column>
            <column name="notes" remarks="Stored notes" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="backbase" context="initial_0.0.1" id="initial_0.0.1_002">
        <loadData tableName="main" file="main_table.csv" relativeToChangelogFile="true">
            <column name="id" type="STRING" />
            <column name="notes" type="STRING" />
        </loadData>
        <comment>add data</comment>
    </changeSet>

</databaseChangeLog>